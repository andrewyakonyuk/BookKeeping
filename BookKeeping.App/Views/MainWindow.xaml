<controls:MetroWindow x:Class="BookKeeping.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:views="clr-namespace:BookKeeping.App.Views"
        xmlns:viewmodels="clr-namespace:BookKeeping.App.ViewModels"
        xmlns:extension="clr-namespace:BookKeeping.App.XamlExtensions"
        xmlns:p="clr-namespace:BookKeeping.App.Properties"
        Title="{Binding Path=DisplayName}" Height="400" Width="800"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                       xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        d:DesignHeight="400" d:DesignWidth="500"
        d:DataContext="{Binding viewmodels:MainWindowViewModel}"
                        WindowStartupLocation="CenterScreen"
                      Style="{DynamicResource VSWindowStyleKey}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BookKeeping.App;component/Styles/Styles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/BookKeeping.App;component/Styles/Colors.xaml" />
                <ResourceDictionary>
                    <DataTemplate DataType="{x:Type viewmodels:CustomerTransactionsViewModel}">
                        <views:CustomerTransactions></views:CustomerTransactions>
                    </DataTemplate>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top"
              SnapsToDevicePixels="True"
              Margin="2,0,0,0">
            <MenuItem Header="{x:Static p:Resources.File}">
                <MenuItem Header="Rocket slot 1">
                    <MenuItem Header="Fire slot" Command="{Binding OpenCustomerTransactions}"/>
                    <Separator />
                    <MenuItem Header="Relaod slot" />
                    <MenuItem Header="Report damage to control room" />
                </MenuItem>
                <MenuItem Header="Rocket slot 2">
                    <MenuItem Header="damaged .. being repaired" IsEnabled="False" />
                </MenuItem>
                <Separator></Separator>
                <MenuItem Header="{x:Static p:Resources.Exit}" Command="{Binding Exit}"></MenuItem>
            </MenuItem>
            <MenuItem Header="{x:Static p:Resources.Edit}">
                <MenuItem Command="Undo" Header="{x:Static p:Resources.Undo}"></MenuItem>
                <MenuItem Command="Redo" Header="{x:Static p:Resources.Redo}"></MenuItem>
                <Separator></Separator>
                <MenuItem Command="Cut" Header="{x:Static p:Resources.Cut}"></MenuItem>
                <MenuItem Command="Copy" Header="{x:Static p:Resources.Copy}"></MenuItem>
                <MenuItem Command="Paste" Header="{x:Static p:Resources.Paste}"></MenuItem>
                <Separator></Separator>
                <MenuItem Command="SelectAll" Header="{x:Static p:Resources.Select_All}"></MenuItem>
            </MenuItem>
            
        </Menu>
        <TextBlock DockPanel.Dock="Left"
                   Foreground="{StaticResource Foreground}"
                   Margin="5"
                   VerticalAlignment="Center">
            <TextBlock.LayoutTransform>
                <RotateTransform Angle="90" />
            </TextBlock.LayoutTransform>
            Starship ENTERPRISE
        </TextBlock>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>
            <TabControl Margin="0,10,0,0" ItemsSource="{Binding Workspaces}" IsSynchronizedWithCurrentItem="True" DisplayMemberPath="DisplayName">
            </TabControl>
            <StackPanel Grid.Column="1"
                        Margin="50,25,25,0">
                <TextBlock Margin="0,10,0,10"
                           FontSize="18"
                           Foreground="{StaticResource Foreground}"
                           Text="Actions" />
                <Separator Background="#11FFFFFF" />
                <Button FontSize="14"
                        Margin="0,10,0,3"
                        Content="Fire rocket..."
                        Style="{StaticResource LinkButton}" />
                <Button FontSize="14"
                        Margin="0,3,0,10"
                        Content="Throw something over board..."
                        Style="{StaticResource LinkButton}" />
                <Separator Background="#11FFFFFF" />
                <TextBlock Margin="0,10,0,10"
                           FontSize="18"
                           Foreground="{StaticResource Foreground}"
                           Text="Recent" />
                <Separator Background="#11FFFFFF" />
                <Button FontSize="14"
                        Margin="0,10,0,3"
                        Content="blastallenemies.cmd"
                        Style="{StaticResource LinkButton}" />
                <Button FontSize="14"
                        Margin="0,3,0,3"
                        Content="verysecretmessage.txt"
                        Style="{StaticResource LinkButton}" />
            </StackPanel>
        </Grid>
    </DockPanel>
</controls:MetroWindow>