<controls:MetroWindow x:Class="BookKeeping.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:views="clr-namespace:BookKeeping.App.Views"
        xmlns:viewmodels="clr-namespace:BookKeeping.App.ViewModels"
        xmlns:extension="clr-namespace:BookKeeping.App.XamlExtensions"
        xmlns:p="clr-namespace:BookKeeping.App.Properties"
        Title="{Binding Path=DisplayName}" Height="350" Width="525">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <!--<ResourceDictionary>
                    <DataTemplate DataType="{x:Type viewmodels:TableViewModel}">
                        <views:TableView></views:TableView>
                    </DataTemplate>
                </ResourceDictionary>-->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <controls:MetroContentControl>
        <DockPanel Background="{DynamicResource Background}">
            <Menu DockPanel.Dock="Top" SnapsToDevicePixels="True" Margin="2,0,0,0"  Background="{DynamicResource Background}" Foreground="{DynamicResource Foreground}">
                <MenuItem Header="{x:Static p:Resources.File}">
                    <MenuItem Header="Rocket slot 1">
                        <MenuItem Header="Fire slot" />
                        <Separator />
                        <MenuItem Header="Relaod slot" />
                        <MenuItem Header="Report damage to control room" />
                    </MenuItem>
                    <MenuItem Header="Rocket slot 2">
                        <MenuItem Header="damaged .. being repaired" IsEnabled="False" />
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="{x:Static p:Resources.Edit}">
                    <MenuItem Command="Undo" Header="{x:Static p:Resources.Undo}"></MenuItem>
                    <MenuItem Command="Redo" Header="{x:Static p:Resources.Redo}"></MenuItem>
                    <Separator></Separator>
                    <MenuItem Command="Cut" Header="{x:Static p:Resources.Cut}"></MenuItem>
                    <MenuItem Command="Copy" Header="{x:Static p:Resources.Copy}"></MenuItem>
                    <MenuItem Command="Paste" Header="{x:Static p:Resources.Paste}"></MenuItem>
                    <Separator></Separator>
                    <MenuItem Command="SelectAll" Header="{x:Static p:Resources.Select_All}"></MenuItem>
                </MenuItem>

                <!--<MenuItem Header="{extension:ToUpperConverter Value={x:Static p:Resources.Tables}}" x:Name="TablesMenu" ItemsSource="{Binding Path=TablesInfo}">
                    <MenuItem.ItemContainerStyle>
                        <Style TargetType="MenuItem">
                            <Setter Property="Header" Value="{Binding Path=Title}"></Setter>
                            <Setter Property="Command" Value="{Binding Path=Command}" />
                            <Setter Property="CommandParameter" Value="{Binding Path=Name}" />
                        </Style>
                    </MenuItem.ItemContainerStyle>
                </MenuItem>-->
                <!--<MenuItem Header="{extension:ToUpperConverter Value={x:Static p:Resources.Forms}}">
                    <MenuItem Header="{x:Static p:Resources.fixteachers_form}" Command="{Binding Path=OpenFixTeachersToDisciplineCommand}"></MenuItem>
                    <MenuItem Header="{x:Static p:Resources.weekly_moving_discipline_form}" Command="{Binding Path=OpenWeeklyMovingDisciplineCommand}"></MenuItem>
                    <MenuItem Header="{x:Static p:Resources.timetable_form}" Command="{Binding Path=OpenTimeTableCommand}"></MenuItem>
                </MenuItem>
                <MenuItem Header="{extension:ToUpperConverter Value={x:Static p:Resources.Themes}}">
                    <MenuItem Header="{x:Static p:Resources.blue_theme}" Tag="Blue" Click="Theme_Changed"></MenuItem>
                    <MenuItem Header="{x:Static p:Resources.green_theme}" Tag="Green" Click="Theme_Changed"></MenuItem>
                    <MenuItem Header="{x:Static p:Resources.orange_theme}" Tag="Orange" Click="Theme_Changed"></MenuItem>
                    <MenuItem Header="{x:Static p:Resources.purple_theme}" Tag="Purple" Click="Theme_Changed"></MenuItem>
                    <MenuItem Header="{x:Static p:Resources.red_theme}" Tag="Red" Click="Theme_Changed"></MenuItem>
                    <MenuItem Header="{x:Static p:Resources.default_theme}" Tag="VS" Click="Theme_Changed"></MenuItem>
                </MenuItem>
                <MenuItem Header="{extension:ToUpperConverter Value={x:Static p:Resources.Help}}">
                    <MenuItem Header="{x:Static p:Resources.Help_View}"></MenuItem>
                    <MenuItem Header="{x:Static p:Resources.About_Program}"></MenuItem>
                </MenuItem>-->
            </Menu>
            <ToolBarPanel DockPanel.Dock="Top" Height="30" Background="{DynamicResource Background}">
                <ToolBar Foreground="{DynamicResource Foreground}">
                    <Button Command="{Binding Path=SaveCommand}" Content="{x:Static p:Resources.Save}"></Button>
                    <Button Command="{Binding Path=PrintCommand}" Content="{x:Static p:Resources.Print}"></Button>
                </ToolBar>
            </ToolBarPanel>
            <Button DockPanel.Dock="Left" Foreground="{DynamicResource LightForeground}" Margin="5" VerticalAlignment="Center">
                <Button.LayoutTransform>
                    <RotateTransform Angle="90" />
                </Button.LayoutTransform>
                Starship ENTERPRISE
            </Button>
            <TextBlock DockPanel.Dock="Right" Foreground="{DynamicResource LightForeground}" Margin="5" VerticalAlignment="Center">
                <TextBlock.LayoutTransform>
                    <RotateTransform Angle="90" />
                </TextBlock.LayoutTransform>
            Starship ENTERPRISE
            </TextBlock>
            <StatusBar DockPanel.Dock="Bottom" Height="30" Margin="0,0,2,0" Foreground="{DynamicResource Foreground}" Background="{DynamicResource Background}">
                <!-- if DEBUG -->
                <StatusBarItem>
                    <StatusBarItem.Content>
                        <Rectangle Width="20"
                                       Height="20"
                                       Margin="2"
                                       HorizontalAlignment="Center">
                            <!--<Rectangle.Fill>
                                <VisualBrush Visual="{StaticResource appbar_smiley_happy}" Stretch="Fill" />
                            </Rectangle.Fill>-->
                        </Rectangle>
                    </StatusBarItem.Content>
                </StatusBarItem>
                <!-- endif -->
                <StatusBarItem Content="{Binding StatusMessage}"></StatusBarItem>
            </StatusBar>
            <Grid Background="{DynamicResource Background}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TabControl Margin="0,10,0,0"
                            ItemsSource="{Binding Path=Workspaces}"
                            DisplayMemberPath="DisplayName"
                            IsSynchronizedWithCurrentItem="True">
                </TabControl>
            </Grid>
        </DockPanel>
    </controls:MetroContentControl>
</controls:MetroWindow>